{
  "name": "bitpass-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Node.js server with Express and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --env-file=.env dist/index.js",
    "dev": "nodemon",
    "build": "npx prisma generate && tsc && tsc-alias && pnpm run copy-prisma-client",
    "copy-prisma-client": "rimraf dist/prisma && cpx \"prisma/**/*\" dist/prisma",
    "format": "pnpm prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "@prisma/client": "^6.7.0",
    "axios": "^1.9.0",
    "express": "^5.1.0",
    "express-file-routing": "^3.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nostr-tools": "^2.12.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "cpx": "^1.5.0",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.5.9",
    "concurrently": "^9.1.2",
    "debug": "^4.4.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@/": "./src/"
  }
}
